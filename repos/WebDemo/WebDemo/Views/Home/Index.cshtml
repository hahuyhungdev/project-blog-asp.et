@model WebDemo.ModelsView.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<section id="hero">

    <div class="container-xl">

        <div class="row gy-4">
            @if (Model.Featured != null)
            {
                string url = $"/{Model.Featured.Alias}.html";
                <div class="col-lg-8">


                    <!-- featured post large -->
                    <div class="post featured-post-lg">
                        <div class="details clearfix">
                            <a href="/@Model.Featured.Alias" class="category-badge">@Model.Featured.Cat.CatName</a>
                            <h2 class="post-title"><a href="@url ">@Model.Featured.Title</a></h2>
                            <ul class="meta list-inline mb-0">
                                <li class="list-inline-item"><a href="#">@Model.Featured.Author</a></li>
                                @if (Model.Featured.CreateDate != null)
                                {
                                    <li class="list-inline-item">@Model.Featured.CreateDate.Value.ToString("dd-MM-yyyy")</li>
                                }
                            </ul>
                        </div>
                        <a href="@url">
                            <div class="thumb rounded">
                                <div class="inner data-bg-image" data-bg-image="/images/posts/from-home-hiu-qu-hn-bao-gi-ht-cng-hp-probook-400-series-g8.jpg"></div>
                            </div>
                        </a>
                    </div>

                </div>
            }

            <div class="col-lg-4">

                <!-- post tabs -->
                <div class="post-tabs rounded bordered">
                    <!-- tab navs -->
                    <ul class="nav nav-tabs nav-pills nav-fill" id="postsTab" role="tablist">
                        <li class="nav-item" role="presentation"><button aria-controls="popular" aria-selected="true" class="nav-link active" data-bs-target="#popular" data-bs-toggle="tab" id="popular-tab" role="tab" type="button">Popular</button></li>
                        <li class="nav-item" role="presentation"><button aria-controls="recent" aria-selected="false" class="nav-link" data-bs-target="#recent" data-bs-toggle="tab" id="recent-tab" role="tab" type="button">Recent</button></li>
                    </ul>
                    <!-- tab contents -->
                    <div class="tab-content" id="postsTabContent">
                        <!-- loader -->
                        <div class="lds-dual-ring"></div>
                        <!-- popular posts -->
                        <div aria-labelledby="popular-tab" class="tab-pane fade show active" id="popular" role="tabpanel">
                            <!-- post -->
                            @if (Model.Populars != null)
                            {
                                foreach (var item in Model.Populars)
                                {
                                    string url = $"/{item.Alias}.html";
                                    <!-- post -->
                                    <div class="post post-list-sm circle">
                                        <div class="thumb circle">
                                            <a href="@url">
                                                <div class="inner">
                                                    <img src="images/posts/tabs-1.jpg" alt="@item.Title" />
                                                </div>
                                            </a>
                                        </div>
                                        <div class="details clearfix">
                                            <h6 class="post-title my-0"><a href="@url">@item.Title</a></h6>
                                            <ul class="meta list-inline mt-1 mb-0">
                                                @*                                <li class="list-inline-item">@Model.Featured.CreateDate.Value.ToString("dd MMMM yyyy")</li>
                                                *@
                                            </ul>
                                        </div>
                                    </div>
                                }
                            }

                        </div>
                        <!--recent post-->
                        <div aria-labelledby="recent-tab" class="tab-pane" id="recent" role="tabpanel">
                            @if (Model.Recents != null)
                            {
                                foreach (var item in Model.Recents)
                                {
                                    string url = $"/{item.Alias}.html";
                                    <!-- post -->
                                    <div class="post post-list-sm circle">
                                        <div class="thumb circle">
                                            <a href="@url">
                                                <div class="inner">
                                                    <img src="images/posts/tabs-2.jpg" alt="@item.Title" />
                                                </div>
                                            </a>
                                        </div>
                                        <div class="details clearfix">
                                            <h6 class="post-title my-0"><a href="@url">@item.Title</a></h6>
                                            <ul class="meta list-inline mt-1 mb-0">
                                                @*                                <li class="list-inline-item">@Model.Featured.CreateDate.Value.ToString("dd MMMM yyyy")</li>
                                                *@
                                            </ul>
                                        </div>
                                    </div>
                                }
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>
