@model WebDemo.Models.Category

@{
    ViewData["Title"] = "CHỈNH SỬA DANH SÁCH DANH MỤC";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">TRANG CHỦ</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Roles" asp-action="Index">QUẢN LÍ QUYỀN TRUY CẬP</a></li>
        <li class="breadcrumb-item active" aria-current="page">DANH SÁCH DANH MỤC</li>
    </ol>
    <h6 class="slim-pagetitle">CHỈNH SỬA DANH SÁCH DANH MỤC :@Model.CatName</h6>
</div><!-- slim-pageheader -->


<div class="section-wrapper">
    <div class="form-layout">
        <form asp-area="Admin" asp-controller="Categories" asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="CatId" />
            <input type="hidden" asp-for="Alias" />
            <input type="hidden" asp-for="Thumb" />
            <input type="hidden" asp-for="Icon" />
            <input type="hidden" asp-for="Cover" />
            <div class="row mg-b-25">
                <div class="col-lg-4">
                    <div class="form-group">
                        <label class="form-control-label">TÊN DANH MỤC: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" asp-for="CatName">
                    </div>
                </div><!-- col-6 -->
                <div class="col-lg-4">
                    <div class="form-group">
                        <label class="form-control-label">MỤC CHA <span class="tx-danger">*</span></label>
                        <select class="form-control select2" style="height: 40px;" asp-for="CatId" asp-items="@ViewBag.DanhMuc" required>
                            <option value="0" selected>DANH MỤC GỐC</option>
                        </select>
                    </div>
                </div><!-- col-4 -->
                <div class="col-lg-4">
                    <div class="form-group">
                        <label class="form-control-label">SẮP XẾP <span class="tx-danger">*</span></label>
                        <input class="form-control" type="number" value="0" asp-for="Ordering">
                    </div>
                </div><!-- col-4 -->
                <div class="col-lg-12">
                    <div class="form-group mg-b-10-force">
                        <label class="form-control-label">MÔ TẢ: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" value="0" asp-for="Desciption">
                    </div>
                </div><!-- col-8 -->
                <div class="col-lg-6">
                    <div class="form-group mg-b-10-force">
                        <label class="form-control-label">ẢNH ĐẠI DIỆN: <span class="tx-danger">*</span></label>
                        <input name="fThumb" type="file" class="form-control-file" asp-for="Thumb">
                    </div>
                </div><!-- col-4 -->
                <div class="col-lg-6">
                    <div class="form-group mg-b-10-force">
                        <label class="form-control-label">COVER <span class="tx-danger">*</span></label>
                        <input name="fCover" type="file" class="form-control-file" asp-for="Cover">
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group mg-b-10-force">
                        <label class="form-control-label">ICON: <span class="tx-danger">*</span></label>
                        <input name="fIcon" type="file" class="form-control-file" asp-for="Icon">
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label>TRẠNG THÁI</label>
                        <br />
                        <input type="checkbox" asp-for="Published"><span>Active</span>
                    </div>
                </div><!-- col-4 -->
                <hr />
                <div class="col-lg-12">
                    <div class="form-group mg-b-10-force">
                        <label class="form-control-label">TIÊU ĐỀ: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" asp-for="Title">
                    </div>
                </div><!-- col-12 -->
                <div class="col-lg-12">
                    <div class="form-group mg-b-10-force">
                        <label class="form-control-label">MetaKey: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" asp-for="MetaKey">
                    </div>
                </div><!-- col-12 -->
                <div class="col-lg-12">
                    <div class="form-group mg-b-10-force">
                        <label class="form-control-label">MetaDesc: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" asp-for="MetaDesc">
                    </div>
                </div><!-- col-12 -->
            </div><!-- row -->

            <div class="form-layout-footer">
                <button class="btn btn-primary bd-0">Submit Form</button>
                <button class="btn btn-secondary bd-0">Cancel</button>
            </div><!-- form-layout-footer -->
        </form>
    </div><!-- form-layout -->
</div><!-- section-wrapper -->
