@model WebDemo.Models.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">HOME</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Roles" asp-action="Index">DANH SÁCH QUYỀN TRUY CẬP</a></li>
        <li class="breadcrumb-item active" aria-current="page">XÁC NHẬN XÓA QUYỀN TRUY CẬP</li>
    </ol>
    <h6 class="slim-pagetitle">XÁC NHẬN XÓA QUYỀN TRUY CẬP</h6>
</div><!-- slim-pageheader -->
<div class="section-wrapper mg-t-20">
    <label class="section-title">XÁC NHẬN XÓA QUYỀN TRUY CẬP</label>

    <div class="form-layout form-layout-7">
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                ID:
            </div><!-- col-4 -->
            <div class="col-7 col-sm-8">
                <input asp-for="CatId" class="form-control" type="text">
            </div><!-- col-8 -->
        </div><!-- row -->
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Tên danh mục :
            </div><!-- col-4 -->
            <div class="col-7 col-sm-8">
                <input asp-for="CatName" class="form-control" type="text">
            </div><!-- col-8 -->
        </div><!-- row -->
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Trạng thái:
            </div><!-- col-4 -->
            <div class="col-7 col-sm-8">
                <input asp-for="Published" class="form-control" type="text">
            </div><!-- col-8 -->
        </div><!-- row -->
    </div><!-- form-layout -->
    <div style="text-align:center !important" class="form-layout-footer mg-t-30">
        <form asp-action="Delete">
            <input type="hidden" asp-for="CatId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</div><!-- section-wrapper -->
