@model WebDemo.Models.Post

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section Styles {
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
    <link href="~/AdminAssets/lib/select2/css/select2.min.css" rel="stylesheet">
}
<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">TRANG CHỦ</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Posts" asp-action="Index">DANH SÁCH TIN ĐĂNG</a></li>
        <li class="breadcrumb-item active" aria-current="page">THÔNG TIN  TIN ĐĂNG</li>
    </ol>
    <h6 class="slim-pagetitle">THÔNG TIN TIN ĐĂNG</h6>
</div><!-- slim-pageheader -->

<div class="section-wrapper">
    <div class="form-layout">
        <div class="form-layout form-layout-7">

            <div class="row no-gutters">
                <div class="col-5 col-sm-4">
                    Tiêu đề :
                </div><!-- col-4 -->
                <div class="col-7 col-sm-8">
                    <input disabled disabled asp-for="Title" class="form-control" type="text">
                </div><!-- col-8 -->
            </div><!-- row -->
            <div class="row no-gutters">
                <div class="col-5 col-sm-4">
                    Tác giả:
                </div><!-- col-4 -->
                <div class="col-7 col-sm-8">
                    <input disabled asp-for="Author" class="form-control" type="text">
                </div><!-- col-8 -->
            </div><!-- row -->
            <div class="row no-gutters">
                <div class="col-5 col-sm-4">
                    ngày tạo
                </div><!-- col-4 -->
                <div class="col-7 col-sm-8">
                    <input disabled asp-for="CreateDate" class="form-control" type="text">
                </div><!-- col-8 -->

            </div><!-- form-layout -->
            <br>
            <div class="col-lg-12">
                <div class="form-group mg-b-10-force">
                    <label class="form-control-label">MO TA <span class="tx-danger">*</span></label>
                    <textarea asp-for="Contents"></textarea>
                </div>
            </div>
            <div style="text-align:center !important" class="form-layout-footer mg-t-30">
                <a asp-area="Admin" asp-controller="Posts" asp-action="Index" class="btn btn-success bd-0">Xem lại danh sách</a>
            </div>

        </div><!-- form-layout -->
</div>
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
    <script src="~/AdminAssets/lib/select2/css/select2.min.js"></script>
    <script>
        jQuery(document).ready(function () {
            $('#Contents').summernote({
                fontNames: ['Arial', 'Arial Black', 'Comic Sans MS', 'Courier New'],
                styleTag: ['p', 'h1', 'h2', 'h3', 'h4', 'h5'],
                height: 200,
                minHeight: null,
                maxHeight: null,
                focus: true
            });
        });
    </script>
}