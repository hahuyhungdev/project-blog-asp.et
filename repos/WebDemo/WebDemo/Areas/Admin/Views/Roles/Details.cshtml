@model WebDemo.Models.Role

@{
    ViewData["Title"] = "THÔNG TIN QUYỀN TRUY CẬP";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">HOME</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Roles" asp-action="Index">DANH SÁCH QUYỀN TRUY CẬP</a></li>
        <li class="breadcrumb-item active" aria-current="page">THÔNG TIN QUYỀN TRUY CẬP</li>
    </ol>
    <h6 class="slim-pagetitle">THÔNG TIN QUYỀN TRUY CẬP</h6>
</div><!-- slim-pageheader -->
<div class="section-wrapper mg-t-20">
    <label class="section-title">XTHÔNG TIN QUYỀN TRUY CẬP</label>

    <div class="form-layout form-layout-7">
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                ID:
            </div><!-- col-4 -->
            <div class="col-7 col-sm-8">
                <input disabled disabled asp-for="RoleId" class="form-control" type="text">
            </div><!-- col-8 -->
        </div><!-- row -->
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Role Name:
            </div><!-- col-4 -->
            <div class="col-7 col-sm-8">
                <input disabled asp-for="RoleName" class="form-control" type="text">
            </div><!-- col-8 -->
        </div><!-- row -->
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                RoleDescription:
            </div><!-- col-4 -->
            <div class="col-7 col-sm-8">
                <input disabled asp-for="RoleDescription" class="form-control" type="text">
            </div><!-- col-8 -->
        </div><!-- row -->
    </div><!-- form-layout -->
    <div style="text-align:center !important" class="form-layout-footer mg-t-30">
        <a asp-area="Admin" asp-controller="Categories" asp-action="Index" class="btn btn-success bd-0">Xem lại danh sách</a>
    </div>
</div><!-- section-wrapper -->

